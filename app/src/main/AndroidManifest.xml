<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplerentalapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleRentalApplication">
        <activity android:name=".ui.PropertyModifyActivity"></activity>
        <activity android:name=".ui.AdminActivity" />
        <activity android:name=".ui.BookingConfirmationActivity" />
        <activity android:name=".ui.BookingActivity" />
        <activity android:name=".ui.PropertyDetailsActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>